<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="16dp"
    android:layout_marginStart="24dp"
    android:layout_marginEnd="24dp"
    tools:context=".main.ui.home.AddPersonFragment">

    <com.example.androidakademija.main.ui.views.EditStringText
        android:id="@+id/edit_image_url"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:textViewText="@string/image_url"
        app:editTextHint="@string/hint_url"
        app:dataType="0"
        app:dataLength="50"
        app:errorText="@string/error_image_url"
        app:layout_constraintTop_toTopOf="parent" />

    <com.example.androidakademija.main.ui.views.EditStringText
        android:id="@+id/edit_string_first_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:textViewText="@string/first_name"
        app:editTextHint="@string/pero"
        app:dataType="0"
        app:dataLength="20"
        app:errorText="@string/error_first_name"
        app:layout_constraintTop_toBottomOf="@id/edit_image_url" />

    <com.example.androidakademija.main.ui.views.EditStringText
        android:id="@+id/edit_string_last_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:textViewText="@string/last_name"
        app:editTextHint="@string/peric"
        app:dataType="0"
        app:dataLength="20"
        app:errorText="@string/error_last_name"
        app:layout_constraintTop_toBottomOf="@id/edit_string_first_name" />

    <com.example.androidakademija.main.ui.views.EditStringText
        android:id="@+id/edit_string_age"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:textViewText="@string/age"
        app:editTextHint="@string/number_twenty"
        app:dataType="1"
        app:dataLength="150"
        app:errorText="@string/error_age"
        app:layout_constraintTop_toBottomOf="@id/edit_string_last_name" />

    <com.example.androidakademija.main.ui.views.EditStringText
        android:id="@+id/edit_string_oib"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:textViewText="@string/oib"
        app:editTextHint="@string/oib_hint"
        app:dataType="2"
        app:dataLength="13"
        app:errorText="@string/error_oib"
        app:layout_constraintTop_toBottomOf="@id/edit_string_age" />

    <include
        android:id="@+id/radio_group"
        layout="@layout/radio_group"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/edit_string_oib"/>

    <Button
        android:id="@+id/button_add"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAllCaps="true"
        android:text="@string/add"
        app:layout_constraintTop_toBottomOf="@id/radio_group"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp" />

</androidx.constraintlayout.widget.ConstraintLayout>